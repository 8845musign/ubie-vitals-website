---
import '@ubie/design-tokens/dist/tokens.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <title>{title} | Ubie Vitals</title>
    <link rel="icon" href="/assets/images/favicon.ico" />
    <link rel="stylesheet" href="/assets/styles/modern-css-reset.css" />
  </head>
  <body>
    <slot />
  </body>
</html>

<style>
  body {
    padding: var(--size-spacing-md);
  }
</style>
